                                    data-id={applicant.Id} class="slds-m-right_small">
                                </lightning-button>

                                <lightning-button label="Save" variant="brand" onclick={handleSaveApplicant}
                                    data-id={applicant.Id}>
                                </lightning-button>
                            </div>
                        </lightning-card>
                    </template>
                </lightning-accordion-section>
            </template>
        </lightning-accordion>
